---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <a id="nav-start" class="sr-only focusable-nav" href="#content-start"
      >Skip navigation</a
    >
    <a class="home" aria-label={SITE_TITLE} href="/">üçî {SITE_TITLE}</a>
    <div class="links">
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink aria-label="R√©sum√©" href="/resume">Resume</HeaderLink>
    </div>
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: var(--bg1);
    background: linear-gradient(var(--bg1), var(--bg));
  }
  .home {
    font-weight: bold;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  nav a {
    padding: 1em 0.5em;
    color: var(--fg0);
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: var(--orange1);
  }
  /* Stack home link and other nav links vertically */
  @media (max-width: 420px) {
    nav {
      flex-direction: column;
    }
  }
</style>
